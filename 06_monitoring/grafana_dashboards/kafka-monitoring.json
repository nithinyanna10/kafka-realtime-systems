{
  "dashboard": {
    "title": "Kafka Real-time Monitoring",
    "tags": ["kafka", "monitoring", "real-time"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Messages per Second",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(kafka_server_brokertopicmetrics_messagesin_total[1m])",
            "legendFormat": "{{topic}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Messages/sec"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"}
      },
      {
        "id": 2,
        "title": "Consumer Lag per Group",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "kafka_consumer_lag_sum",
            "legendFormat": "{{consumer_group}} - {{topic}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Lag"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"}
      },
      {
        "id": 3,
        "title": "Broker CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "kafka_server_kafkaserver_brokerstate",
            "legendFormat": "Broker State",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU %"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"}
      },
      {
        "id": 4,
        "title": "Total Messages In",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(kafka_server_brokertopicmetrics_messagesin_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1000, "color": "yellow"},
                {"value": 5000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Total Consumer Lag",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8},
        "targets": [
          {
            "expr": "sum(kafka_consumer_lag_sum)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 1000, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Bytes In/Out per Second",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(kafka_server_brokertopicmetrics_bytesin_total[1m])",
            "legendFormat": "Bytes In - {{topic}}",
            "refId": "A"
          },
          {
            "expr": "rate(kafka_server_brokertopicmetrics_bytesout_total[1m])",
            "legendFormat": "Bytes Out - {{topic}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "bytes", "label": "Bytes/sec"},
          {"format": "short"}
        ],
        "xaxis": {"mode": "time"}
      },
      {
        "id": 7,
        "title": "Partition Count",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "count(kafka_controller_kafkacontroller_offlinepartitionscount)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none"
        }
      },
      {
        "id": 8,
        "title": "Active Consumers",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 16},
        "targets": [
          {
            "expr": "count(kafka_consumer_lag_sum)",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none"
        }
      }
    ],
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}

